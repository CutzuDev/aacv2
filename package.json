{
  "name": "aac-romanian-bun",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run dev:watch",
    "dev:watch": "bun dev.ts",
    "dev:client": "bunx esbuild src/app.ts --bundle --outfile=public/app.js --format=esm --platform=browser --target=es2020 --watch",
    "dev:server": "bun --watch server.ts",
    "build": "bunx esbuild src/app.ts --bundle --outfile=public/app.js --format=esm --platform=browser --target=es2020",
    "start": "bun run server.ts"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@types/bun": "^1.3.2"
  }
}